<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity3">

    <LinearLayout
        android:id="@+id/result_user_name_ll_4"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#DAE3F3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nanum_square_round_eb"
            android:text="&quot;RT&quot;"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="60dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_eb"
            android:text="에 대해 알아봤어요!"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result_user_name_ll_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/result_user_detail_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/result_user_name_ll_4">

                <TextView
                    android:id="@+id/result_user_detail_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_round_rec_blue"
                    android:elevation="1dp"
                    android:fontFamily="@font/font_namun_square_round_b"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="단어 정보"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />

                <LinearLayout
                    android:id="@+id/analysis_friend_container_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingTop="35dp"
                    android:paddingBottom="35dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/bg_round_rec_gray">

                    <RelativeLayout
                        android:id="@+id/result_user_detail_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/result_user_detail_title"
                            android:layout_width="7dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_round_rec_light_blue"/>

                        <TextView
                            android:id="@+id/result_user_detail_friend_num_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/result_user_detail_title"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:text="언급 된 총 횟수"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/result_user_detail_ll"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/font_nanum_square_round_eb"
                        android:gravity="center"
                        android:text="4,229,134 회"
                        android:textColor="#000"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:id="@+id/result_user_detail_word_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/result_user_detail_word_title"
                            android:layout_width="7dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_round_rec_light_blue"/>

                        <TextView
                            android:id="@+id/result_user_detail_word_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/result_user_detail_word_title"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:text="많이 언급한 유저 TOP 3"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TableRow>
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/bg_cir_blue_01"
                                    android:text="1"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="dhlsun"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="(472 번)"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />
                            </TableRow>
                            <Space
                                android:layout_height="9dp"/>
                            <TableRow>
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/bg_cir_blue_02"
                                    android:text="2"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="Aew_wy"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="(441 번)"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />
                            </TableRow>
                            <Space
                                android:layout_height="9dp"/>
                            <TableRow>
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/bg_cir_blue_03"
                                    android:text="3"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="ming8535"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="(403 번)"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />
                            </TableRow>

                        </TableLayout>
                    </RelativeLayout>



                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>