<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ResultActivity2">

    <LinearLayout
        android:id="@+id/result_user_name_ll_2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#DAE3F3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="&quot;14060875&quot;"
            android:textSize="60dp"
            android:textColor="#000000"
            android:fontFamily="@font/nanum_square_round_eb"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="님에 대해 알아봤어요!"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/nanum_square_round_eb"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/result_user_name_ll_2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/result_user_rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/result_user_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="기본 정보"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/font_namun_square_round_b"
                    android:background="@drawable/bg_round_rec_blue"/>

                <LinearLayout
                    android:id="@+id/result_user_container_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingTop="35dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/bg_round_rec_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="닉네임"
                            android:gravity="center"
                            android:textColor="#FFF"
                            android:textSize="15dp"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:background="@drawable/bg_round_rec_blue_03"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:gravity="center_vertical"
                            android:text="estima7"
                            android:textColor="#000"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="가입일"
                            android:gravity="center"
                            android:textColor="#FFF"
                            android:textSize="15dp"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:background="@drawable/bg_round_rec_blue_03"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:gravity="center_vertical"
                            android:text="2008.02.29"
                            android:textColor="#000"
                            android:textSize="18dp" />
                    </LinearLayout>



                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/result_user_detail_rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/result_user_rl_2">

                <TextView
                    android:id="@+id/result_user_detail_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="세부 정보"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/font_namun_square_round_b"
                    android:background="@drawable/bg_round_rec_blue"/>

                <LinearLayout
                    android:id="@+id/analysis_friend_container_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingTop="35dp"
                    android:paddingBottom="35dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/bg_round_rec_gray">

                    <RelativeLayout
                        android:id="@+id/result_user_detail_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/result_user_detail_title"
                            android:layout_width="7dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_round_rec_light_blue"/>

                        <TextView
                            android:id="@+id/result_user_detail_friend_num_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/result_user_detail_title"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:text="친구수"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@id/result_user_detail_ll"
                        android:gravity="center"
                        android:text="247 명"
                        android:textColor="#000"
                        android:fontFamily="@font/font_nanum_square_round_eb"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:id="@+id/result_user_detail_word_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/result_user_detail_word_title"
                            android:layout_width="7dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_round_rec_light_blue"/>

                        <TextView
                            android:id="@+id/result_user_detail_word_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/result_user_detail_word_title"
                            android:fontFamily="@font/font_namun_square_round_b"
                            android:text="가장 많이 쓴 단어 TOP 3"
                            android:textColor="#000000"
                            android:textSize="18dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TableRow>
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/bg_cir_blue_01"
                                    android:text="1"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="RT"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="(428 번)"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />
                            </TableRow>
                            <Space
                                android:layout_height="9dp"/>
                            <TableRow>
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/bg_cir_blue_02"
                                    android:text="2"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="ㅠㅠ"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="(310 번)"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />
                            </TableRow>
                            <Space
                                android:layout_height="9dp"/>
                            <TableRow>
                                <TextView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/bg_cir_blue_03"
                                    android:text="3"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="ㅋㅋㅋㅋ"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_namun_square_round_b"
                                    android:text="(198 번)"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />
                            </TableRow>

                        </TableLayout>
                    </RelativeLayout>



                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>